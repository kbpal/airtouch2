<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="horizontal" android:background="@color/v2bg" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="5dp">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="5dp" android:layout_weight="1">
        <TextView android:textSize="25sp" android:id="@+id/montofribtn" android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginTop="5dp" android:text="AC  Timer"/>
        <TableLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TableRow android:id="@+id/tableRow1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp">
                <TextView android:textSize="20dp" android:id="@+id/ac1ontime" android:focusable="true" android:layout_width="120dp" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="2dp" android:checked="true" android:text="AC ON Time"/>
                <TextView android:textSize="20sp" android:textColor="#646464" android:id="@+id/mtftime1onstatus" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="2dp" android:checked="true" android:text="06:30AM"/>
                <Button android:id="@+id/Button1" android:background="@drawable/btn_radio_off" android:layout_width="70dp" android:layout_height="70dp" android:layout_marginLeft="20dp"/>
            </TableRow>
            <View android:background="?android:attr/listDivider" android:layout_width="wrap_content" android:layout_height="2dp" android:layout_alignParentBottom="true"/>
            <TableRow android:id="@+id/tableRow2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp">
                <TextView android:textSize="20dp" android:id="@+id/ac1offtime" android:layout_width="120dp" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="2dp" android:text="AC OFF Time"/>
                <TextView android:textSize="20sp" android:textColor="#646464" android:id="@+id/mtftime1offstatus" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="2dp" android:checked="true" android:text="08:00AM"/>
                <Button android:id="@+id/Button2" android:background="@drawable/btn_radio_off" android:layout_width="70dp" android:layout_height="70dp" android:layout_marginLeft="20dp"/>
            </TableRow>
            <View android:background="?android:attr/listDivider" android:layout_width="wrap_content" android:layout_height="2dp" android:layout_alignParentBottom="true"/>
            <TableRow android:id="@+id/tableRow3" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp">
                <TextView android:textSize="20sp" android:id="@+id/ac2ontime" android:focusable="true" android:layout_width="120dp" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="2dp" android:checked="true" android:text="AC2 ON Time"/>
                <TextView android:textSize="20sp" android:textColor="#646464" android:id="@+id/mtftime2onstatus" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="2dp" android:checked="true" android:text="06:30AM"/>
                <Button android:id="@+id/ac2onButton" android:background="@drawable/btn_radio_off" android:layout_width="70dp" android:layout_height="70dp" android:layout_marginLeft="20dp"/>
            </TableRow>
            <View android:background="?android:attr/listDivider" android:layout_width="wrap_content" android:layout_height="2dp" android:layout_alignParentBottom="true"/>
            <TableRow android:id="@+id/tableRow4" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp">
                <TextView android:textSize="20sp" android:id="@+id/ac2offtime" android:layout_width="120dp" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="2dp" android:text="AC2 OFF Time"/>
                <TextView android:textSize="20sp" android:textColor="#646464" android:id="@+id/mtftime2offstatus" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="2dp" android:checked="true" android:text="08:00AM"/>
                <Button android:id="@+id/ac2OffButton" android:background="@drawable/btn_radio_off" android:layout_width="70dp" android:layout_height="70dp" android:layout_marginLeft="20dp"/>
            </TableRow>
            <View android:background="?android:attr/listDivider" android:layout_width="wrap_content" android:layout_height="2dp" android:layout_alignParentBottom="true"/>
        </TableLayout>
    </LinearLayout>
</LinearLayout>
