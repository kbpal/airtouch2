<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:gravity="center_horizontal" android:background="@color/progTime" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:gravity="center" android:orientation="vertical" android:background="@color/v2bg" android:padding="20dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="30dp" android:layout_marginTop="30dp" android:layout_marginRight="30dp">
        <TextView android:textSize="18sp" android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Service outage"/>
        <ScrollView android:layout_width="match_parent" android:layout_height="200dp" android:layout_marginTop="5dp" android:layout_marginBottom="5dp">
            <TextView android:gravity="center" android:layout_gravity="center_horizontal" android:paddingTop="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Due to scheduled maintenance, Airtouch2 internet access service will be unavailable from Saturday 20th July 2019 to Sunday 21th July 2019. If you cannot access your Airtouch2 from internet after 21th, please reconnect the Airtouch2 to your WiFi network by going to User - WiFi on the touchpad then select the WiFi network on the screen to connect or call 08 8349 8466 for technical support. We apologise for any inconvenience caused."/>
        </ScrollView>
        <CheckBox android:id="@+id/IDShowAgain" android:layout_width="wrap_content" android:layout_height="wrap_content" android:checked="true" android:text="Show this next time"/>
        <Button android:id="@+id/dialogButtonOK" android:background="@drawable/button_general_selector" android:padding="5dp" android:layout_width="100dp" android:layout_height="30dp" android:text="OK"/>
    </LinearLayout>
</RelativeLayout>
